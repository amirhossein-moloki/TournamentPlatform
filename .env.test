# Application Configuration
NODE_ENV=test
PORT=3001 # Different port for tests

# Database Configuration (PostgreSQL) - Placeholder for tests
DB_HOST=localhost
DB_PORT=5432
DB_USER=test_user
DB_PASSWORD=test_password
DB_NAME=test_db
DB_SSL_ENABLED=false

# JWT Configuration
JWT_SECRET=test_jwt_secret_key_for_ci_environment
JWT_ACCESS_TOKEN_EXPIRATION=5m
JWT_REFRESH_TOKEN_EXPIRATION=10m
JWT_REFRESH_COOKIE_NAME=jid_test

# Redis Configuration - Placeholder for tests
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS_ENABLED=false

# RabbitMQ Configuration - Placeholder for tests
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# Payment Gateway Configuration
PAYMENT_GATEWAY_API_KEY=test_payment_gateway_api_key
PAYMENT_GATEWAY_WEBHOOK_SECRET=test_payment_gateway_webhook_secret

# AWS S3 Configuration - Placeholder for tests
AWS_ACCESS_KEY_ID=test_aws_access_key_id
AWS_SECRET_ACCESS_KEY=test_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=test_s3_bucket_name
AWS_S3_SIGNED_URL_EXPIRATION=60

# Logging Configuration
LOG_LEVEL=error # Quieter logs for tests

# Admin User Seeder Configuration
ADMIN_EMAIL=admin_test@example.com
ADMIN_PASSWORD=TestAdminPassword123!

# Rate Limiting (can be disabled or set high for tests if needed)
RATE_LIMIT_WINDOW_MS=1000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS Configuration
CORS_ORIGIN=*

# Webhook Idempotency Key Header Name
IDEMPOTENCY_KEY_HEADER=X-Idempotency-Key

# Zarinpal
ZARINPAL_MERCHANT_ID=TEST_ZARINPAL_MERCHANT_ID

# Email Service
EMAIL_SERVICE_PROVIDER=CONSOLE
EMAIL_SENDER_ADDRESS=test_noreply@example.com
