{
  "name": "tournament-platform",
  "version": "1.0.0",
  "description": "A comprehensive tournament platform with secure registration, wallet management, and real-time match updates.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "lint": "eslint . --ext .js --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"**/*.{js,json,md,yml}\"",
    "test": "NODE_ENV=test jest",
    "test:unit": "NODE_ENV=test jest --testPathPattern=tests/unit",
    "test:integration": "sudo docker-compose -f docker-compose.test.yml up -d > docker-compose.log 2>&1 && sleep 15 && NODE_ENV=test npm run db:migrate && NODE_ENV=test jest --testPathPattern=tests/integration && sudo docker-compose -f docker-compose.test.yml down",
    "test:e2e": "NODE_ENV=test jest --testPathPattern=tests/e2e",
    "test:contract": "NODE_ENV=test jest --testPathPattern=tests/contract",
    "test:performance": "NODE_ENV=test jest --testPathPattern=tests/performance",
    "db:migrate": "sequelize-cli db:migrate",
    "db:migrate:undo": "sequelize-cli db:migrate:undo",
    "db:seed": "sequelize-cli db:seed:all",
    "db:seed:undo": "sequelize-cli db:seed:undo:all",
    "swagger-gen": "node ./swagger.js",
    "swagger-jsdoc": "node ./swaggerDef.js > docs/swagger-generated.json",
    "docker:build": "docker build -t tournament-platform .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f app"
  },
  "keywords": [
    "tournament",
    "esports",
    "gaming",
    "platform",
    "nodejs",
    "expressjs",
    "sequelize",
    "postgresql",
    "redis",
    "rabbitmq",
    "socket.io"
  ],
  "author": "Your Name or Organization <your.email@example.com>",
  "license": "ISC",
  "dependencies": {
    "@joi/date": "^2.1.1",
    "@socket.io/redis-adapter": "^8.3.0",
    "amqplib": "^0.10.3",
    "aws-sdk": "^2.1530.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csrf-sync": "^4.2.1",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-oas-generator": "^1.0.48",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "http-status": "^2.1.0",
    "http-status-codes": "^2.3.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "ms": "^2.1.3",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "redis": "^4.6.12",
    "sanitize-html": "^2.17.0",
    "sequelize": "^6.37.7",
    "socket.io": "^4.7.4",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "yamljs": "^0.3.0",
    "zarinpal-node-sdk": "^2.2.0"
  },
