    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.2",
    "sequelize-cli": "^6.6.3",
    "supertest": "^6.3.3",
    "swagger-autogen": "^2.23.7"
  },
  "engines": {
